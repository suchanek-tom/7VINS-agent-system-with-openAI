{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "instructions": ["AGENTS.md"],
  "tools": {
    "read": true,
    "edit": true,
    "write": true,
    "bash": true,
    "webfetch": true,
    "grep": true,
    "todowrite": true,
    "todoread": true
  },
  "formatter": {
    "prettier": {
      "command": ["npx", "prettier", "--write", "$FILE"],
      "extensions": [".js", ".jsx", ".ts", ".tsx", ".json", ".md", ".css"],
      "environment": {
        "NODE_ENV": "development"
      }
    }
  }
}
